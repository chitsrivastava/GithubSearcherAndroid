<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delaroystudios.javadevelopers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dakshbhardwaj.GithubSearcher.controller.MainActivity">

        </activity>
        <activity
            android:name="com.dakshbhardwaj.GithubSearcher.controller.DetailActivity"
            android:parentActivityName="com.dakshbhardwaj.GithubSearcher.controller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dakshbhardwaj.GithubSearcher.controller.MainActivity" />
        </activity>
        <activity android:name="com.dakshbhardwaj.GithubSearcher.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>